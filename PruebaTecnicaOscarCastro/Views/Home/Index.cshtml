@{
    ViewBag.Title = "Bienvenido";
}

<div class="container text-center mt-5">
    <h1 class="mb-4 text-primary">¡Bienvenido a la Gestión de Salas y Reservas!</h1>
    <p class="lead mb-5">Seleccione una opción para comenzar:</p>

    <div class="row g-4 d-flex justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h5 class="card-title text-primary">Gestión de Salas</h5>
                    <p class="card-text">Administre las salas disponibles, sus detalles y configuraciones.</p>
                    <a href="/Salas" class="btn btn-primary">Ir a Salas</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h5 class="card-title text-success">Gestión de Reservas</h5>
                    <p class="card-text">Controle las reservas, horarios y disponibilidad de las salas.</p>
                    <a href="/Reservas" class="btn btn-success">Ir a Reservas</a>
                </div>
            </div>
        </div>
    </div>
</div>
