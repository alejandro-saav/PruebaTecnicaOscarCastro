@model PruebaTecnicaOscarCastro.Models.Sala

<div class="container">
    <h2>Nueva Sala</h2>

    @using (Html.BeginForm()) {
        <div class="form-group">
            @Html.LabelFor(m => m.Nombre, "Nombre de la Sala")
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Capacidad, "Capacidad")
            @Html.TextBoxFor(m => m.Capacidad, new { @class = "form-control", type = "number", min = "1", required = "required" })
            @Html.ValidationMessageFor(m => m.Capacidad, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="custom-control custom-checkbox">
                @Html.CheckBoxFor(m => m.Disponibilidad, new { @class = "custom-control-input" })
                @Html.LabelFor(m => m.Disponibilidad, "Disponible", new { @class = "custom-control-label" })
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
    }
</div>